  <script>
    let plan = "";

    function toQ2() {
      document.getElementById("q1").style.display = "none";
      document.getElementById("q2").style.display = "block";
    }

    function toQ3(choice) {
      plan = choice;
      document.getElementById("q2").style.display = "none";
      document.getElementById("q3").style.display = "block";
    }

    function no() {
      alert("AIHHHH ");
    }

    function final(time) {
      document.body.innerHTML = `
        <div class="card">
          <h1>AWLE</h1>
          <p><strong>THIL EINA HMUN TUR:</strong> ${plan}</p>
          <p><strong>MIN DUH CHHAN:</strong> ${time}</p>
          <p>TI HREP DAWN CHE</p>
        </div>
      `;
    }
  </script>

